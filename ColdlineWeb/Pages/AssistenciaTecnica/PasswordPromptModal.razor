@inherits ComponentBase

@if (Show)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirme sua senha</h5>
                    <button type="button" class="btn-close" @onclick="OnClose"></button>
                </div>
                <div class="modal-body">
                    <input type="password" class="form-control" placeholder="Digite a senha" @bind="Senha" />
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="OnClose">Cancelar</button>
                    <button class="btn btn-primary" @onclick="Confirmar">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<string> OnConfirmado { get; set; }

    private string Senha { get; set; } = "";

    private async Task Confirmar()
    {
        await OnConfirmado.InvokeAsync(Senha);
        Senha = "";
    }
}
