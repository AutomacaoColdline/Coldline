@page "/homeAssistencia"
@layout EmptyLayout
@inherits HomeAssistenciaPage

<link href="css/HomeAssitencia.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="d-flex">
    <nav class="sidebar bg-primary text-white">
        <div class="sidebar-header p-3">
            <img src="img/logo.png" class="logo-navbar" alt="Logo" style="max-height: 4.5rem;" />
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <button @onclick="ShowAcessos" class="nav-link text-white btn btn-link text-start w-100">
                    <i class="bi bi-door-open"></i>&nbsp;Acessos
                </button>
            </li>
            <li class="nav-item">
                <button @onclick="ShowDocumentacao" class="nav-link text-white btn btn-link text-start w-100">
                    <i class="bi bi-journal-text"></i>&nbsp;Documentação
                </button>
            </li>
        </ul>
    </nav>

    <div class="content flex-fill p-4">
        @if (activeSection == "acessos")
        {
            <div class="card p-3 mb-4">
                <div class="row g-2">
                    <div class="col-md-2">
                        <select class="form-select" @bind="filtro.Estado">
                            <option value="">Todos os Estados</option>
                            @foreach (var uf in estadosDisponiveis)
                            {
                                <option value="@uf">@uf</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" @bind="filtro.Cidade">
                            <option value="">Todas as Cidades</option>
                            @foreach (var cidade in cidadesDisponiveis)
                            {
                                <option value="@cidade">@cidade</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select" @bind="filtro.MonitoringTypeId">
                            <option value="">Todos os Tipos</option>
                            @foreach (var tipo in tiposMonitoramento)
                            {
                                <option value="@tipo.Id">@tipo.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2"><input class="form-control" placeholder="Identificador" @bind="filtro.Identificador" /></div>
                    <div class="col-md-3"><input class="form-control" placeholder="Unidade" @bind="filtro.Unidade" /></div>
                    <div class="col-md-1 d-grid">
                        <button class="btn btn-success" @onclick="BuscarMonitoramentos">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Unidade</th>
                            <th>Estado</th>
                            <th>RUSTDESK</th>
                            <th>Tipo de Monitoramento</th>
                            <th>AÇÕES</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var acesso in monitoramentos)
                        {
                            <tr>
                                <td>@acesso.Unidade</td>
                                <td>@acesso.Estado</td>
                                <td>@acesso.IdRustdesk</td>
                                <td>@acesso.MonitoringType?.Name</td>
                                <td>
                                    <button class="btn btn-warning btn-sm" @onclick="() => Editar(acesso)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-info btn-sm me-1" @onclick="() => Visualizar(acesso)">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else if (activeSection == "documentacao")
        {
            <h2>Documentação</h2>

            @if (arquivos.Count == 0)
            {
                <p><strong>Carregando arquivos ou nenhum encontrado.</strong></p>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var arquivo in arquivos)
                    {
                        <li class="list-group-item">
                            <a href="@arquivo.Url" target="_blank">@arquivo.Nome</a>
                        </li>
                    }
                </ul>
            }
        }
        <PasswordPromptModal Show="@showPasswordModal"
                     OnClose="FecharModal"
                     OnConfirmado="ConfirmarSenha" />

        <EditMonitoringModal Show="@showEditModal"
                    Current="currentEditing"
                    OnClose="FecharModal"
                    OnSave="SalvarAlteracoes" />

        <ViewMonitoringModal Show="@showViewModal"
                    Current="currentEditing"
                    OnClose="FecharModal" />


    </div>
</div>
