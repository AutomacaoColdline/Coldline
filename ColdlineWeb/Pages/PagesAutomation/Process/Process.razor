@using ColdlineWeb.Models
@inherits ProcessPage

<link rel="stylesheet" href="css/Automation/Process.css" />

@if (isLoading)
{
    <div class="loader-wrapper">
        <div class="custom-loader"></div>
        <span class="loading-text">Carregando...</span>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else
{
    <!-- ==============================
         Card de Pesquisa e Filtros
         ============================== -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong>Pesquisar Processos</strong>

            <button class="btn btn-success btn-sm btn-icon"
                    title="Adicionar novo processo"
                    @onclick="OpenAddProcessModal">
                <span class="btn-icon-plus">+</span>
                <img src="img/automation/adicionar.png" alt="Novo Processo" class="btn-icon-img" />
            </button>
        </div>

        <div class="card-body">
            <div class="row g-2 align-items-end filter-row">

                <!-- Identificação -->
                <div class="col-12 col-md-4 col-lg-3">
                    <label class="form-label mb-1 d-none d-md-block">Nº de Identificação</label>
                    <input class="form-control"
                           placeholder="Ex.: 12345"
                           @bind="filterIdentification" />
                </div>

                <!-- Departamento -->
                <div class="col-12 col-md-4 col-lg-3">
                    <label class="form-label mb-1 d-none d-md-block">Departamento</label>
                    <select class="form-select" @bind="filterDepartmentId">
                        <option value="">Todos</option>
                        @foreach (var dept in departments)
                        {
                            <option value="@dept.Id">@dept.Name</option>
                        }
                    </select>
                </div>

                <!-- Tipo de Processo -->
                <div class="col-12 col-md-4 col-lg-3">
                    <label class="form-label mb-1 d-none d-md-block">Tipo de Processo</label>
                    <select class="form-select" @bind="filterProcessTypeId">
                        <option value="">Todos</option>
                        @foreach (var type in processTypes)
                        {
                            <option value="@type.Id">@type.Name</option>
                        }
                    </select>
                </div>

                <!-- Status -->
                <div class="col-12 col-md-4 col-lg-3">
                    <label class="form-label mb-1 d-none d-md-block">Status</label>
                    <select class="form-select" @bind="filterFinished">
                        <option value="">Todos</option>
                        <option value="true">Finalizados</option>
                        <option value="false">Em andamento</option>
                    </select>
                </div>

                <!-- Data de Início -->
                <div class="col-12 col-md-4 col-lg-3">
                    <label class="form-label mb-1 d-none d-md-block">Data Inicial</label>
                    <input type="date" class="form-control" @bind="filterStartDate" />
                </div>

                <!-- Data de Fim -->
                <div class="col-12 col-md-4 col-lg-3">
                    <label class="form-label mb-1 d-none d-md-block">Data Final</label>
                    <input type="date" class="form-control" @bind="filterEndDate" />
                </div>

                <!-- Botões -->
                <div class="col-12 mt-3 d-flex justify-content-end gap-2">
                    <button class="btn btn-primary btn-icon filter-btn"
                            title="Filtrar"
                            @onclick="ApplyFilters">
                        <img src="img/lupa.png" alt="Filtrar" class="btn-icon-img" />
                    </button>

                    <button class="btn btn-outline-secondary btn-icon filter-btn"
                            title="Limpar filtros"
                            @onclick="ClearFilters">
                        <img src="img/limpar-limpo.png" alt="Limpar filtros" class="btn-icon-img" />
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- ==============================
         Lista de Processos
         ============================== -->
    <div class="card mt-4 table-card">
        <div class="card-body p-0">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Nº Identificação</th>
                        <th>Usuário</th>
                        <th>Departamento</th>
                        <th>Tipo de Processo</th>
                        <th>Tempo de Processo</th>
                        <th>Início</th>
                        <th>Término</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (processList.Count == 0)
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted">Nenhum processo encontrado.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var p in processList)
                        {
                            <tr>
                                <td>@p.IdentificationNumber</td>
                                <td>@p.User?.Name</td>
                                <td>@p.Department?.Name</td>
                                <td>@p.ProcessType?.Name</td>
                                <td>@p.ProcessTime</td>
                                <td>@p.StartDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@(p.EndDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                <td>
                                    @if (p.Finished)
                                    {
                                        <span class="badge bg-success">Finalizado</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Em andamento</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-warning btn-sm" title="Editar" @onclick="() => OpenEditProcessModal(p)">
                                        <img src="img/editar.png" alt="Editar" width="16" height="16" />
                                    </button>
                                    <button class="btn btn-danger btn-sm" title="Excluir" @onclick="() => DeleteProcess(p.Id)">
                                        <img src="img/lixeira.png" alt="Excluir" width="16" height="16" />
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- ==============================
         Paginação
         ============================== -->
    <div class="pagination-container">
        <button class="btn btn-secondary"
                title="Anterior"
                @onclick="GoToPreviousPage"
                disabled="@(!CanGoPrevious)">
            <img src="img/seta-esquerda.png" alt="Anterior" style="width: 16px; height: 16px;" />
        </button>

        <span>@pageNumber de @totalPages</span>

        <button class="btn btn-secondary"
                title="Próxima"
                @onclick="GoToNextPage"
                disabled="@(!CanGoNext)">
            <img src="img/seta-direita.png" alt="Próxima" style="width: 16px; height: 16px;" />
        </button>
    </div>
}

<!-- ==============================
     Modal de Processo
     ============================== -->
<ProcessModal
    ShowModal="@showModal"
    IsEditing="@isEditing"
    CurrentProcess="@currentProcess"
    Users="@users"
    Departments="@departments"
    ProcessTypes="@processTypes"
    CloseModal="CloseModal"
    SaveProcess="SaveProcess"
    UpdateProcess="UpdateProcess"
/>
