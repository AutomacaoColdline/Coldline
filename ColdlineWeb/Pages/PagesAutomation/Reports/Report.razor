@inherits ReportPage
@using ColdlineWeb.Pages.PagesAutomation.Reports.Components

<link rel="stylesheet" href="css/Automation/Report.css" />

<div class="dashboard-container">
    <nav class="navbar-report">
        <div class="tab-group">
           <button class="@GetTabClass("dashboard")" @onclick="@(() => SetActiveTab("dashboard"))">ğŸ“Š Dashboard</button>
            <button class="@GetTabClass("process")" @onclick="@(() => SetActiveTab("process"))">âš™ï¸ Processos</button>

        </div>

        <div class="navbar-actions">
            <button class="btn-generate" @onclick="LoadDashboard">ğŸ”„ Atualizar</button>
        </div>
    </nav>

    @if (isLoading)
    {
        <div class="loader-overlay"><div class="loader"></div></div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger text-center">@errorMessage</div>
    }
    else
    {
        @if (activeTab == "dashboard")
        {
            <Dashboard />
        }
        else if (activeTab == "process")
        {
            <Process />
        }
    }
</div>
