@page "/reports"
@inject HttpClient Http
@inherits ReportsPage

<link rel="stylesheet" href="css/Quality.css" />

<div class="tab-bar">
    <button class="tab-button @(selectedChart == null ? "active" : "")" @onclick="@(() => ExibirChart(null))">
        Dashboard
    </button>

    <!-- Quantidade -->
    <div class="tab-button dropdown">
        <button class="tab-button @(selectedChart?.StartsWith("numberProcess") == true || selectedChart == "numberOcurrenceDate" ? "active" : "")">
            Processos (Quantidade)
        </button>
        <div class="dropdown-content">
            <button @onclick="@(() => ExibirChart("numberProcessDate"))">Por data</button>
            <button @onclick="@(() => ExibirChart("numberProcessByUsers"))">Por usuário</button>
            <button @onclick="@(() => ExibirChart("numberProcessByTypeProcess"))">Por tipo de processo</button>
        </div>
    </div>

    <div class="tab-button dropdown">
        <button class="tab-button @(selectedChart == "numberMachineDate" || selectedChart == "numberMachineByTypeMachine" ? "active" : "")">
            Máquinas (Quantidade)
        </button>
        <div class="dropdown-content">
            <button @onclick="@(() => ExibirChart("numberMachineDate"))">Por data</button>
            <button @onclick="@(() => ExibirChart("numberMachineByTypeMachine"))">Por tipo</button>
        </div>
    </div>

    <!-- Tempo -->
    <div class="tab-button dropdown">
        <button class="tab-button @(selectedChart?.StartsWith("timeProcessByUsers") == true ? "active" : "")">
            Processos (Tempo)
        </button>
        <div class="dropdown-content">
            <button @onclick="@(() => ExibirChart("timeProcessByUsers"))">Por usuários</button>
            <button @onclick="@(() => ExibirChart("timeProcessByUsersIndividual"))">Por usuário individual</button>
            <button @onclick="@(() => ExibirChart("timeProcessByTypeProcess"))">Por tipo de processo</button>
        </div>
    </div>

    <div class="tab-button dropdown">
        <button class="tab-button @(selectedChart == "timeMachineByTypeMachine" || selectedChart == "timeMachineByMachine" ? "active" : "")">
            Máquinas (Tempo)
        </button>
        <div class="dropdown-content">
            <button @onclick="@(() => ExibirChart("timeMachineByTypeMachine"))">Por tipo</button>
            <button @onclick="@(() => ExibirChart("timeMachineByMachine"))">Por máquina</button>
        </div>
    </div>
</div>

<!-- Renderização do conteúdo -->
@switch (selectedChart)
{
    case null:
        <Dashboard />;
        break;
    case "numberProcessDate":
        <NumberProcessDate />;
        break;
    case "numberMachineDate":
        <NumberMachineDate />;
        break;
    case "numberProcessByUsers":
        <NumberProcessByUsers />;
        break;
    case "numberProcessByTypeProcess":
        <NumberProcessByTypeProcess />;
        break;
    case "numberMachineByTypeMachine":
        <NumberMachineByTypeMachine />;
        break;
    case "timeProcessByUsers":
        <TimeProcessByUsers />;
        break;
    case "timeProcessByUsersIndividual":
        <TimeProcessByUsersIndividual />;
        break;
    case "timeMachineByTypeMachine":
        <TimeMachineByTypeMachine />;
        break;
    case "timeMachineByMachine":
        <TimeProcessByMachine />;
        break;
    case "timeProcessByTypeProcess":
        <TimeProcessByTypeProcess />;
        break;
    case "numberBrokenPartDate":
        <NumberBrokenPartDate />;
        break;
    case "numberBrokenPartByUsers":
        <NumberBrokenPartByUsers />;
        break;
    case "numberBrokenPartByTypeProcess":
        <NumberBrokenPartByTypeProcess />;
        break;
    case "costsByTypeProcess":
        <CostsByTypeProcess />;
        break;
    case "costsByTypeMachine":
        <CostsByTypeMachine />;
        break;
}
