@inject IJSRuntime JS
@inject HttpClient Http
<link rel="stylesheet" href="css/NumberProcessByTypeProcess.css" />

<div class="filtro-container">
    <label>De:
        <input @bind="startDate" type="date" />
    </label>
    <label>Até:
        <input @bind="endDate" type="date" />
    </label>
    <label>Tipo de Gráfico:
        <select @bind="chartType">
            <option value="bar">Barra</option>
            <option value="line">Linha</option>
        </select>
    </label>
    <button @onclick="GerarGraficoPorTipoProcesso">
        <img src="img/lupa.png" alt="Buscar" class="btn-icon" />
    </button>
</div>

<div class="grafico-container">
    <canvas id="processTypeChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="js/numberProcessByTypeProcess.js"></script>

@code {
    private DateTime startDate = DateTime.Today.AddDays(-7);
    private DateTime endDate = DateTime.Today;
    private string chartType = "bar";

    private async Task GerarGraficoPorTipoProcesso()
    {
        var data = new
        {
            startDate = startDate.ToUniversalTime(),
            endDate = endDate.ToUniversalTime()
        };

        var response = await Http.PostAsJsonAsync("http://10.0.0.44:5000/api/Process/chart/by-type-and-date", data);

        if (response.IsSuccessStatusCode)
        {
            var result = await response.Content.ReadFromJsonAsync<List<ProcessTypeChartDto>>();
            if (result is not null)
            {
                var labels = result.Select(r => r.ProcessTypeName).ToList();
                var values = result.Select(r => r.Quantity).ToList();
                await JS.InvokeVoidAsync("renderizarGraficoTipoProcesso", labels, values, chartType);
            }
        }
        else
        {
            // Logar erro ou exibir alerta ao usuário
            Console.Error.WriteLine("Erro ao buscar dados da API.");
        }
    }

    public class ProcessTypeChartDto
    {
        public string ProcessTypeName { get; set; } = string.Empty;
        public string Date { get; set; } = string.Empty; // opcional
        public int Quantity { get; set; }
    }
}
