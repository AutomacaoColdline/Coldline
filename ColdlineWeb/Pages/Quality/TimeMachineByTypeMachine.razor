@page "/reports/time-machine-by-type"
@inject IJSRuntime JS
@inject HttpClient Http

<link rel="stylesheet" href="css/TimeMachineByTypeMachine.css" />

<div class="filtro-container">
    <label>De:
        <input @bind="startDate" type="date" />
    </label>
    <label>Até:
        <input @bind="endDate" type="date" />
    </label>
    <label>Tipo de Gráfico:
        <select @bind="chartType">
            <option value="bar">Barra</option>
            <option value="line">Linha</option>
        </select>
    </label>
    <button @onclick="GerarGraficoTempoPorTipoDeMaquina">
        <img src="img/lupa.png" alt="Buscar" class="btn-icon" />
    </button>
</div>

<div class="grafico-container">
    <canvas id="machineTypeChart"></canvas>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="js/timeMachineByTypeMachine.js"></script>

@code {
    private DateTime startDate = DateTime.Today.AddDays(-7);
    private DateTime endDate = DateTime.Today;
    private string chartType = "bar";

    public class MachineTypeTimeDto
    {
        public string MachineTypeId { get; set; } = string.Empty;
        public string MachineTypeName { get; set; } = string.Empty;
        public string AverageProcessTime { get; set; } = "00:00:00";
        public int MachineCount { get; set; }
    }

    private async Task GerarGraficoTempoPorTipoDeMaquina()
    {
        var requestData = new
        {
            startDate = startDate.ToUniversalTime(),
            endDate = endDate.ToUniversalTime()
        };

        var response = await Http.PostAsJsonAsync("api/Machine/average-process-time-by-type", requestData);
        if (!response.IsSuccessStatusCode)
            return;

        var result = await response.Content.ReadFromJsonAsync<List<MachineTypeTimeDto>>();
        if (result == null)
            return;

        var labels = result.Select(x => x.MachineTypeName).ToList();
        var valoresOriginais = result.Select(x => x.AverageProcessTime).ToList();

        await JS.InvokeVoidAsync("renderizarGraficoTempoPorTipoDeMaquina", labels, valoresOriginais, chartType);
    }
}
